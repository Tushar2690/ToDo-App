{
    "builds": [{
        "src": "TodoProject/wsgi.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "15mb", "runtime": "python3.11" }
    }],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "TodoProject/wsgi.py"
        }
    ],
    "installCommand":"pip install -r requirements.txt && python manage.py collectstatic --no-input && python manage.py migrate",
    "buildCommand":"gunicorn TodoProject.wsgi:application"
}
